@inject SignInManager<User> _signInManager

@using EduHub.Domain.Entities
@using Microsoft.AspNetCore.Identity
@model EduHub.Application.Models.PaginatedList.PaginatedListModel<EduHub.Application.DTOs.User.UserDTO>;

<h3>Teachers:</h3>

<form asp-action="Teachers" method="post" class="form-group d-flex gap-4">
    <input type="text" name="search" value="@ViewData["CurrentFilter"]" class="form-control w-25"/>
    <input type="submit" value="Search" class="btn btn-primary"/>
    <a asp-action="Teachers" class="btn btn-outline-dark">Back to Full List</a>
</form>

<div class="d-flex justify-content-around flex-wrap">
    @foreach (var teacher in Model.Items)
    {
        <div class="card m-4" style="width: 18rem;">
            @if (teacher.UserImgUrl != null)
            {
                <img class="card-img-top" style='width: 18rem; height: 14rem;  object-fit: cover' src="@teacher.UserImgUrl" alt="img"/>
            }
            else
            {
                <img class="card-img-top" style='width: 18rem; height: 14rem; object-fit: cover' src="https://localhost:7056/AppFiles/images/base-user-icon.jpg" alt="img"/>
            }
            <div class="card-body">
                <h6 class="card-title">@teacher.UserName</h6>
                <h5 class="card-title">@teacher.FirstName @teacher.LastName</h5>
                <p class="card-text">@teacher.Email</p>

                <p class="card-text" style='height: 100px;  overflow: auto'>@teacher.AboutMe</p>
                <p class="card-text">Register at: @teacher.RegisterTime.ToString("dd/MM yyyy")</p>

                <a asp-controller="Admin" asp-action="ShowMoreInfo" asp-route-id=" @teacher.Id" class="btn btn-primary">Show more info</a>
                <a asp-controller="Admin" asp-action="RemoveFromTeachers" asp-route-id="@teacher.Id" class="btn btn-danger">Remove</a>
            </div>
        </div>
    }

</div>

<div class="w-100 d-flex justify-content-center">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Teachers"
           asp-route-pageNum="@(Model.PageNumber - 1)"
           class="btn btn-outline-dark">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Previous
        </a>
    }
    @if (Model.HasNextPage)
    {
        <a asp-action="Teachers"
           asp-route-pageNum="@(Model.PageNumber + 1)"
           class="btn btn-outline-dark">
            Next
            <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
    }
</div>