@model EduHub.Application.Models.Profile.ChangePhotoModel;


<form asp-action="ChangePhoto" asp-controller="Profile" method="post" enctype="multipart/form-data" class="m-4">
                @if (Model.UserImgUrl != null)
                {
                    <img style='width: 200px; height: 200px; border-radius: 100%; object-fit: cover;' src="@Model.UserImgUrl"/>
                }
                else
                {
                    <img style='width: 200px; height: 200px; border-radius: 100%; object-fit: cover;' src="https://eduhubstorage.blob.core.windows.net/eduhubphoto/a70f700e-c6b7-4d72-8f2b-39b8a41b8368.jpg"/>
                }
      <div>
            <label asp-for="NewProfileImage">Add New profile image</label><br/>
            <input asp-for="NewProfileImage" value="New photo" class="btn btn-secondary"/>
            <span asp-validation-for="NewProfileImage" class="text-danger fs-6"></span>
      </div>
      <div asp-validation-summary="ModelOnly"></div>
       <div class="d-flex mb-2 gap-3 mt-3">
           <button asp-controller="Profile" asp-action="MyProfile" class="btn btn-dark">Back</button>
            <input type="submit" value="Change Photo" class="btn btn-success"/>
        </div>   
  
</form>