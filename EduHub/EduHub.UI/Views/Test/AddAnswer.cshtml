@using System.Globalization
@model EduHub.UI.ViewModels.Answer.AddAnswerVM;

<div class="teachers-courses-wrapper">
    <div class="courses-sidebar">
        <h3>My courses</h3>
        <a class="add-course" method="post" asp-controller="Course" asp-action="AddCourse"><i class="bi bi-plus-circle"></i> Add course</a>
        @foreach (var course in Model.Courses)
        {
            if(Model.Test?.CourseId == course.Id)
            {
                 <a class="side-title-course active-link-sidebar" asp-controller="Course" asp-action="Course" asp-route-id="@course.Id">
                    <i class="bi bi-chevron-right"></i>@course.Name
                </a>
            }
            else
            {
                <a class="side-title-course" asp-controller="Course" asp-action="Course" asp-route-id="@course.Id">
                    <i class="bi bi-chevron-right"></i>@course.Name
                </a>
            }
        }

    </div>

    <div class="content p-4">
        <h4>Test name: @Model.Test?.Name</h4>
        <div>Description: @Model.Test?.Description</div>
         <div class="card-text">Start at:  @Model.Test?.StartTime.ToString("G",CultureInfo.GetCultureInfo("de-DE"))</div>
         <div class="card-text">End at:  @Model.Test?.EndTime.ToString("G",CultureInfo.GetCultureInfo("de-DE"))</div>
         <div class="card-text">Duration:  @Model.Test?.DurationMinutes</div>
         <a asp-controller="Test" asp-action="EditTest" asp-route-id=" @Model.Test?.Id" class="btn btn-secondary">Edit test</a>

        <h5>Test Questions: </h5>
        <a asp-controller="Test" asp-action="AddQuestion" asp-route-id="@Model.Test?.Id" class="btn btn-secondary"><i class="bi bi-plus-circle"></i>  Add question</a>
 
        
            <div class="card w-100 m-1">
                <div class="card-body">
                    <h5 class="card-title">@Model.Queastion?.QuestionContent</h5>
                    <p class="card-text">Type: @Model.Queastion?.Type.ToString()</p>
                    <div class="card-text">Points: @Model.Queastion?.Points</div>
                     <div class="d-flex gap-4">
                        <a asp-controller="Test" asp-action="EditQuestion" asp-route-id=" @Model.Queastion?.Id" class="btn btn-success">Edit</a>
                        <a asp-controller="Test" asp-action="DeleteQuestion" asp-route-id=" @Model.Queastion?.Id" asp-route-testId="@Model.Test?.Id" class="btn btn-danger">Delete</a>
                    </div>

                    
 <form method="post" asp-controller="Test" asp-action="AddAnswer" enctype="multipart/form-data" class="d-flex flex-column align-items-center">
    <div class="d-flex flex-column align-items-start width-30vw p-4">
        <h5> Add Answer</h5>

        <input asp-for="AddAnswer.TestId" value="@Model.Test?.Id" hidden/>
        <input asp-for="AddAnswer.QuestionId" value="@Model.Queastion?.Id" hidden/>

        <div>
            <label asp-for="AddAnswer.Content" class="text-secondary fs-6">Content</label><br/>
            <input asp-for="AddAnswer.Content" class="rounded width-30vw"/>
            <span asp-validation-for="AddAnswer.Content" class="text-danger fs-6"></span>
        </div>
        <div>
            <input asp-for="AddAnswer.IsCorrect" id="correct" type="checkbox" />
            <label asp-for="AddAnswer.IsCorrect" class="text-secondary fs-6">Is Correct</label>
            <span asp-validation-for="AddAnswer.IsCorrect" class="text-danger fs-6"></span>

        </div>
     

        <br/>
          <div asp-validation-summary="ModelOnly"></div>
        <br/>

        <div class="align-self-center mb-2">
            <input type="submit" value="Add Answer" class="btn btn-dark align-self-center px-5 rounded-sm text-center"/>
        </div>
    </div>
</form>
                   

                    @foreach(var answer in @Model?.Queastion?.Answers)
                    {
                    @if (@answer.IsCorrect)
                    {
                        <div class="d-flex gap-4 m-3 align-items-center bg-success text-white p-2 rounded">
                        <div>
                            @answer.Content
                        </div>
                         <a asp-controller="Test" asp-action="DeleteAnswer" asp-route-id="@answer.Id" asp-route-testId="@Model.Test?.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>

                        </div>
                    }
                    else
                    {
                         <div class="d-flex gap-4 m-3 align-items-center p-2 rounded">
                        <div>
                            @answer.Content
                        </div>
                         <a asp-controller="Test" asp-action="DeleteAnswer" asp-route-id="@answer.Id" asp-route-testId="@Model.Test?.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>

                    </div>
                    }
               
                    }
                  
                </div>
            </div>
        
     </div>

</div>

