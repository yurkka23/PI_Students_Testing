@model IEnumerable<EduHub.Application.DTOs.Course.CourseDTO>;     

<div class="teachers-courses-wrapper">
    <div class="courses-sidebar">
        <h3>My courses</h3>
        <a class="add-course" method="post" asp-controller="Course" asp-action="AddCourse"><i class="bi bi-plus-circle"></i> Add course</a>
        @foreach (var course in Model)
        {
            <a class="side-title-course" asp-controller="Course" asp-action="Course" asp-route-id="@course.Id" class="btn btn-danger">
                <i class="bi bi-chevron-right"></i>@course.Name
            </a>
        }

    </div>

  

</div>